<header class="navigation" role="banner">
  <div class="navigation-wrapper">
    <a href="javascript:void(0)" class="logo">
      <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png" alt="Logo Image">
    </a>
    <nav role="navigation">
      <span class='header-title'><%= link_to "Team Genie", root_path, class: 'title' %></span>
    </nav>
    <a href="javascript:void(0)" class="navigation-menu-button" id="js-mobile-menu">
      <span class='fa fa-bars fa-2x'></span>
    </a>
    <div class="navigation-tools">
      <ul id="js-navigation-menu" class="navigation-menu show">
        <% if current_user %>
          <li class="nav-link">Welcome, <%= current_user.name %></li>
          <li class="nav-link"><%= link_to "New Team", new_team_path %></li>
          <li class="nav-link"><%= link_to "My Account", edit_user_path(current_user) %></li>
          <li class="nav-link"><%= link_to "Log out", auth_path(current_user), method: 'delete'%></li>
        <% else %>
          <li class="nav-link"><%= link_to "Sign up", new_user_path%></li>
        <% end %>
      </ul>
    </div>
  </div>
</header>
