<div ng-controller='ngTeamTabsCtrl'>
	<h1><%= @team.name %></h1>		
	<div class='col-xs-12 col-sm-4'>
		<div class="list-group">
		  <li role="presentation" id="games" class="list-group-item team-tab active" ng-click="changeTab('games')"><span class='fa fa-calendar fa-fx'></span><a href="#">Games</a></li>
		  <li role="presentation" id="roster" class="list-group-item team-tab" ng-click="changeTab('roster')"><span class='fa fa-user fa-fx'></span><a href="#"> Roster</a></li>
		  <li role="presentation" id="settings" class="list-group-item team-tab" ng-click="changeTab('settings')"><span class='fa fa-gear fa-fx'></span><a href="#"> Settings</a></li>
		  <li role="presentation" id="return" class="list-group-item"><span class='fa fa-back fa-fx'></span><a href=<%= teams_path %>>Back to My Teams</a></li>
		</div>
	</div>

	<div class='col-xs-12 col-sm-8'>
		<div ng-show="isActive('games')">
			<%= render partial: 'games/index' %>
		</div>
		
		<div ng-show="isActive('roster')">
			<%= render partial: 'memberships/index' %>
		</div>
	</div>
</div>

