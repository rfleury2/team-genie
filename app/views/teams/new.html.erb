<div class="row">
  <div class="col-md-8">
    <div class="well">
      <%= form_for @team do |f| %>

        <h4>Create New Team</h4>
        <hr />

        <% if @errors %>
          <%= render partial: 'shared/errors', locals: { errors: @errors } %>
        <% end %>

        <div class="form-group">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :sport %><br />
          <%= f.select :sport, @list_of_sports, class: 'form-control' %>
        </div>

        <hr />

        <div class="actions">
          <%= f.submit "Create Team", class: 'btn btn-warning' %>
        </div>
      <% end %>
    </div>
  </div>
</div>