<div class="col-xs-12 well">
	<div class="col-xs-12 col-md-6">
		<span class='team-icon'><i class="fa fa-futbol-o fa-5x"></i></span>
		<%= link_to team_path(team) do %>
			<span class='team-name-label'><%= team.name %> | </span>
			<span class='team-sport-label'><%= team.sport %></span>
		<% end %>
	</div>
	<div class="col-xs-12 col-md-6  team-info-container text-right">
		<div class='team-info-digest'><i class="fa fa-calendar fa-fw"></i> <%= team.games.upcoming.count %> upcoming games</div>
		<div class='team-info-digest'><i class="fa fa-user fa-fw"></i> <%= team.player_count %> players</div>
	</div>
</div>
